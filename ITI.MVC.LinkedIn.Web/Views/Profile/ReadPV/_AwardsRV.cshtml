@model ITI.MVC.LinkedIn.Web.Models.ViewModels.HonorVM
@{ if (Model.AwardsCount > 0)
    {
        <div id="awards-read-body" class="body-container h4">
            <div class="float-right">
                <a onclick="EditUserAwards(@Model.id)" class="btn btn--plus" style="color:#0E7BB5"><i class="fas fa-pencil-alt"></i> </a>
            </div>
            <div class="course-Name font-weight-bold"> @Model.Title</div>
            <div class="course-number font-weight-normal p">@Model.IssueDate.GetValueOrDefault().ToString("MMM yyyy") </div>
            <div class="course-number font-weight-normal p">@Model.Description</div>
            <hr />
        </div>
    }
    else
    {

<div id="awards-read" class="accomplishment">
    <div class="accomplishment__section accomplishment__section1">
        <p id="awards-read-count" class="accomplishment__number">1</p>
    </div>
    <div class="accomplishment__section accomplishment__section2 mr-3">
        <h4 class="accomplishment__type">
            Honor & Award
        </h4>
        <p id="awards-read-names" class="accomplishment__description">
                @Model.Title
        </p>
    </div>
    <div class="accomplishment__section accomplishment__section3 float-md-right">
        <button class="btn " data-toggle="collapse" data-target="#awardsColl" id="awards-button"><i class="fas fa-chevron-down"></i></button>
        <a class="btn btn--arrow" id="btn-2"> <i class="fas fa-chevron-up"></i></a>
    </div>

    <div id="awardsColl" class="collapse">
        <div id="awards-read-body" class="body-container h4">
            <div class="float-right">
                <a onclick="EditUserAwards(@Model.id)" class="btn btn--plus" style="color:#0E7BB5"><i class="fas fa-pencil-alt"></i> </a>
            </div>
            <div class="course-Name font-weight-bold"> @Model.Title</div>
            <div class="course-number font-weight-normal p">@Model.IssueDate.GetValueOrDefault().ToString("MMM yyyy") </div>
            <div class="course-number font-weight-normal p">@Model.Description</div>
            <hr />
        </div>
    </div>

</div>
    }
}


<script type="text/javascript">
    $(document).ready(function () {
        if (@Model.AwardsCount > 0) {
            $("#awards-read-names").append(`<i class="fas fa-circle" style="font-size: 5px"></i> @Model.Title`);
            document.getElementById("awards-read-count").innerHTML = @Model.AwardsCount +1;
        }



    });
</script>
